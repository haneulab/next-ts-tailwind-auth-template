{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNEXT",
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            /** FRONT END */
            "typing": ["./types/index.d.ts"],

            /** STYLES */
            "frontend/styles": ["./styles/index.css"],

            /** COMPONENTS */
            "frontend/layouts": ["./components/layouts/index.ts"],
            "frontend/core": ["./components/core/index.ts"],
            "frontend/utils": ["./components/utils/index.ts"],

            /** CONTEXTS & HOOKS */
            "frontend/contexts": ["./contexts/index.ts"],
            "frontend/hooks": ["./hooks/index.ts"],
            "frontend/functions": ["./functions/index.ts"],

            /** SERVICE FUNCTIONS */
            "services/*": ["./services/*"],

            /** BACK END */
            "backend/config/*": ["./backend/config/*"],
            "backend/database": ["./backend/database/index.ts"],
            "backend/auth": ["./backend/auth/index.ts"]
        },
        "incremental": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
