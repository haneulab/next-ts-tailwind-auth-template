{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNEXT",
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@app-styles": ["./apps/styles/index.css"],
            "@app-types": ["./apps/types/index.d.ts"],
            "@app-contexts": ["./apps/contexts/index.ts"],
            "@app-libs": ["./apps/libs/index.ts"],
            "@app-hooks": ["./apps/hooks/index.ts"],
            "@app-functions": ["./apps/functions/index.ts"],
            "@app-components/layouts": ["./apps/components/layouts/index.ts"],
            "@app-components/core": ["./apps/components/core/index.ts"],
            "@app-components/utils": ["./apps/components/utils/index.ts"]
        },
        "incremental": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
