{
    "root": ".",
    "alias": "@nextapp",
    "pages": {
        "path": "pages",
        "asDir": true,
        "pattern": {
            "declaration": "arrow",
            "layout": {
                "getLayout": true,
                "importFrom": "^alias/Layout",
                "dynamic": true
            },
            "serverSideProps": false
        }
    },
    "components": {
        "path": "packages/components/^package",
        "alias": "^alias/^package"
    }
}
